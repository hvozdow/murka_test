<h1>Edit Sales</h1>
<%= form_for @sale do |f| %>
<p>
<%= f.label :DT %><br/>
<%= f.text_field :DT %>
</p>
<p>
<%= f.label :ProductID %><br/>
<%= f.text_area :ProductID %>
</p>
<p>
<%= f.label :Price %><br/>
<%= f.text_area :Price %>
</p>
<p>
<%= f.label :Quantity %><br/>
<%= f.text_area :Quantity %>
</p>
<p>
<%= f.submit %>
</p>
<% end %>
<%= link_to "Back to rates listing", sales_path %>